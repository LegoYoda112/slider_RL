<mujoco>
    <!-- Simulation properties -->
    <compiler texturedir="asset"  
        meshdir="../meshes/" balanceinertia="true"/>

    <statistic extent="1.5" meansize="0.1"/>

    <option jacobian="auto">
        <flag multiccd="enable"/>
    </option>

    <option viscosity="0.0"/>

    <!-- Rendering properties -->
    <visual>
        <rgba haze="0.1 0.1 0.1 1"/>
        <quality shadowsize="4096"/>
        <map stiffness="700" shadowscale="0.5" fogstart="10" fogend="15" zfar="40" haze="0.3"/>
    </visual>

    <!-- Assets -->
    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2"
      width="512" height="512" mark="cross" markrgb=".8 .8 .8"/>

        <material name="matplane" reflectance="0.3" texture="texplane" texrepeat="1 1" texuniform="true"/>
    </asset>

    <!-- Include slider urdf -->
    <include file="slider_2_0.xml"/>

    <!-- World description -->
    <worldbody>
        <!-- Lighting -->
        <light directional="true" diffuse=".4 .4 .4" specular="0.1 0.1 0.1" pos="0 0 5.0" dir="1 0 -1" castshadow="false"/>
        <light directional="true" diffuse=".6 .6 .6" specular="0.2 0.2 0.2" pos="0 0 4" dir="0 0 -1"/>

        <!-- Flat ground plane -->
        <geom name="ground" type="plane" size="0 0 1" pos="0 0 0.1" quat="1 0 0 0" material="matplane" condim="1"/>

        <geom name="obstical2" type = "box" size = "1 5 0.05" pos = "8 0 0.1"/>

        <geom name="obstical3" type = "box" size = "2 5 0.05" pos = "12 0 0.1"/>

        <geom name="obstical4" type = "box" size = "0.25 5 1" pos = "-1.5 0 -0.89" />
        <geom name="obstical5" type = "box" size = "0.25 5 1" pos = "0 0 -0.85"/>
        <geom name="obstical6" type = "box" size = "0.25 5 1" pos = "2 0 -0.8"/>

    </worldbody>

</mujoco>
